{
  "name": "morsels",
  "version": "0.0.0",
  "description": "morsels",
  "main": "index.js",
  "scripts": {
    "dev": "webpack-cli serve --config ./webpack.dev.js",
    "preDocs": "npm run buildSearch && npm run installIndexer  && cargo install --path packages/mdbook-morsels",
    "devDocs": "npm run preDocs && cd docs && mdbook serve -p 8000",
    "buildDocs": "npm run preDocs && cd docs && mdbook build",
    "buildSearch": "webpack --config ./webpack.prod.js",
    "index1": "cargo run -p morsels_indexer --release ./test_files/1/source ./test_files/1/output --perf",
    "index2": "cargo run -p morsels_indexer --release ./test_files/2/source ./test_files/2/output --perf",
    "devServer1": "http-server ./test_files/1 -p 3000 --cors",
    "devServer2": "http-server ./test_files/2 -p 3000 --cors",
    "lint": "eslint packages/search-ui --ext .ts && eslint packages/search --ext .ts",
    "lintFix": "eslint packages/search-ui --ext .ts --fix && eslint packages/search --ext .ts --fix",
    "setup": "npm install && lerna bootstrap",
    "test": "cargo test",
    "installIndexer": "cargo install --path packages/morsels_indexer"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.15.0",
    "@typescript-eslint/parser": "^4.15.0",
    "@wasm-tool/wasm-pack-plugin": "^1.5.0",
    "css-loader": "^6.2.0",
    "eslint": "^7.19.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-plugin-import": "^2.22.1",
    "html-loader": "^2.1.2",
    "html-webpack-plugin": "^5.3.2",
    "http-server": "^0.12.3",
    "lerna": "^3.22.1",
    "mini-css-extract-plugin": "^2.2.0",
    "style-loader": "^3.2.1",
    "ts-loader": "^9.2.5",
    "typescript": "^4.3.5",
    "webpack": "^5.49.0",
    "webpack-cli": "^4.7.2",
    "webpack-dev-server": "^4.0.0-rc.0",
    "webpack-merge": "^5.7.3"
  }
}
